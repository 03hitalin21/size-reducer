[Unit]
Description=Size Reducer Telegram Bot
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/size-reducer
EnvironmentFile=/opt/size-reducer/.env
ExecStart=/opt/size-reducer/.venv/bin/python -m bot.main
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target